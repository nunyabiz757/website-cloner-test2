# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Security Configuration
# ----------------------

# Session Security
VITE_SESSION_TIMEOUT=1800000              # 30 minutes (in milliseconds)
VITE_MAX_SESSIONS_PER_USER=3              # Maximum concurrent sessions
VITE_ENABLE_FINGERPRINTING=true           # Enable device fingerprinting

# Rate Limiting
VITE_RATE_LIMIT_ENABLED=true              # Enable client-side rate limiting
VITE_GENERAL_RATE_LIMIT=100               # General requests per window
VITE_GENERAL_RATE_WINDOW=900000           # 15 minutes (in milliseconds)
VITE_AUTH_RATE_LIMIT=5                    # Auth attempts per window
VITE_AUTH_RATE_WINDOW=900000              # 15 minutes (in milliseconds)
VITE_CLONE_RATE_LIMIT=10                  # Clone requests per hour
VITE_EXPORT_RATE_LIMIT=10                 # Export requests per hour
VITE_OPTIMIZE_RATE_LIMIT=20               # Optimization requests per hour

# Input Validation
VITE_MAX_URL_LENGTH=2048                  # Maximum URL length
VITE_MAX_IMAGE_SIZE_MB=10                 # Maximum image upload size (MB)
VITE_MAX_FILE_SIZE_MB=50                  # Maximum file upload size (MB)
VITE_ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,gif,webp,svg,bmp,ico
VITE_MAX_IMAGE_WIDTH=4096                 # Maximum image width (pixels)
VITE_MAX_IMAGE_HEIGHT=4096                # Maximum image height (pixels)

# Password Requirements
VITE_MIN_PASSWORD_LENGTH=8                # Minimum password length
VITE_MAX_PASSWORD_LENGTH=128              # Maximum password length
VITE_REQUIRE_PASSWORD_SPECIAL=false       # Require special characters

# XSS Protection
VITE_AUTO_SANITIZE_HTML=true              # Auto-sanitize HTML content
VITE_AUTO_STRIP_SCRIPTS=true              # Auto-strip script tags
VITE_AUTO_SANITIZE_SVG=true               # Auto-sanitize SVG files
VITE_AUTO_STRIP_EXIF=true                 # Auto-strip EXIF data from images

# Security Logging
VITE_ENABLE_SECURITY_LOGGING=true         # Enable security event logging
VITE_LOG_FAILED_LOGINS=true               # Log failed login attempts
VITE_LOG_VALIDATION_FAILURES=true         # Log validation failures
VITE_LOG_RATE_LIMIT_EXCEEDED=true         # Log rate limit violations
VITE_LOG_SUSPICIOUS_ACTIVITY=true         # Log suspicious activity

# Content Security Policy
VITE_CSP_ENABLED=true                     # Enable Content Security Policy
VITE_CSP_REPORT_URI=                      # CSP violation report URI (optional)

# CORS Configuration
VITE_ALLOWED_ORIGINS=http://localhost:5173,https://your-domain.com

# Feature Flags
VITE_ENABLE_GOOGLE_AUTH=true              # Enable Google OAuth
VITE_ENABLE_EMAIL_VERIFICATION=false      # Require email verification
VITE_ENABLE_2FA=false                     # Enable two-factor authentication (future)

# Development/Production
VITE_ENVIRONMENT=development              # development | production
VITE_DEBUG_MODE=false                     # Enable debug logging

# Optional: GeoIP and Threat Detection
VITE_ENABLE_GEOIP_TRACKING=false          # Track user locations (requires service)
VITE_ENABLE_VPN_DETECTION=false           # Detect VPN/Tor usage (requires service)
VITE_SUSPICIOUS_LOGIN_DISTANCE_KM=500     # Flag logins from unusual locations

# Storage Encryption
VITE_ENABLE_STORAGE_ENCRYPTION=true       # Encrypt localStorage data
VITE_STORAGE_KEY_ROTATION_DAYS=30         # Rotate encryption keys (days)

# Security Monitoring
VITE_SECURITY_DASHBOARD_ENABLED=true      # Enable security dashboard
VITE_EVENT_RETENTION_DAYS=90              # Keep security events for N days
